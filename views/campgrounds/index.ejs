<% layout('./layouts/boilerplate') %>

    <div id="cluster-map"></div>
    <h1>all campgrounds are here</h1>
    <% for(campground of campgrounds){ %>
        <div class="card mb-2">
            <div class="row">
                <div class="col-md-4">
                    <img src="<%= campground.images && campground.images.length > 0 ? campground.images[0].url : '' %>"
                        class="card-img-top" alt="...">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%=campground.title%>
                        </h5>
                        <p class="card-text">
                            <%=campground.description%>
                        </p>
                        <a href="campgrounds/<%=campground._id%>" class="btn btn-primary">show</a>
                    </div>
                </div>
            </div>
        </div>
        <%}%>
            <a href="campgrounds/new">add new</a>

            <script>
                const mapBoxToken = '<%-process.env.MAPBOX_TOKEN %>';
                const campgrounds = {features : <%-JSON.stringify(campgrounds)%>};
            </script>
            <script src="/javascript/clusterMap.js"></script>