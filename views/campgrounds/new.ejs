<% layout('./layouts/boilerplate') %>
    <div class="row">
        <h2 class="col-6 offset-3">
            is text centered?
        </h2>
        <div class="col-6 offset-3">
            <form action="/campgrounds" method="post" class="form validate-form" novalidate enctype="multipart/form-data">
                
                <div class="mb-3">
                    <label for="formFileMultiple" class="form-label">Upload images</label>
                    <div>
                        <input type="file", name="image", id="formFileMultiple" multiple>
                    </div>
                </div>
       
                  
                <div class="mb-3">
                    <label class="form-label" for="title">title</label>
                    <input class="form-control" type="text" name="campground[title]" placeholder="title" required>
                    <div class="invalid-feedback">
                        Please choose a title.
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">location</label>
                    <input class="form-control" type="text" name="campground[location]" placeholder="location" required>
                    <div class="invalid-feedback">
                        Please choose a location.
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="price">price</label>
                    <div class="input-group ">
                        <span class="input-group-text">$</span>
                        <input type="text" class="form-control" id="price" aria-label="Amount (to the nearest dollar)"
                            name="campground[price]" required>
                        <span class="input-group-text">.00</span>
                    </div>
                    <div class="invalid-feedback">
                        Please choose a price.
                    </div>
                </div>
                <!-- <div class="mb-3">
                    <label class="form-label" for="image">image url</label>
                    <input class="form-control" type="text" name="campground[image]" placeholder="url" required>
                    <div class="invalid-feedback">
                        Please choose a url.
                    </div>
                </div> -->
                <div class="mb-3">
                    <label class="form-label" for="description">description</label>
                    <textarea class="form-control" type="text" name="campground[description]" required></textarea>
                    <div class="invalid-feedback">
                        Please write a description.
                    </div>
                </div>

                <div class="mb-3">
                    <button class="btn btn-success">add</button>
                </div>
            </form>
            <a href="/campgrounds">go back</a>

        </div>
    </div>
    